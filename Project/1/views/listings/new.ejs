<% layout('/layouts/boilerplate.ejs') -%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br><br>
            <h3>Create a New List</h3>
            <form action="/listings" method="post">
                <div class="mb-3">
                    <label class="form-lable" for="title">Title:</label>
                    <input type="text" id="title" name="listing[title]" class="form-control">
                </div>
                <div class="mb-3">
                    <label class="form-lable" for="description">Description:</label>
                    <textarea id="description" name="listing[description]" class="form-control"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-lable" for="image">Image URL:</label>
                    <input type="text" id="image" name="listing[image]" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label class="form-lable" for="price">Price:</label>
                        <input type="number" id="price" name="listing[price]" class="form-control">
                    </div>
                    <div class="mb-3 col-md-8">
                        <label class="form-lable" for="country">Country:</label>
                        <input type="text" id="country" name="listing[country]" class="form-control">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-lable" for="location">Location:</label>
                    <input type="text" id="location" name="listing[location]" class="form-control">
                </div>
                <br>
                <button type="submit" class="btn btn-dark add-btn mt-3">Submit</button>
                
            </form>
        </div>
    </div>